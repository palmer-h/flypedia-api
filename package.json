{
  "name": "flypedia-api",
  "version": "1.0.0",
  "description": "An API for fly fishing flies and imitatees",
  "main": "server.js",
  "author": "Palmer Hinchliffe",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "postinstall": "yarn build",
    "dev": "nodemon",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint-fix": "eslint src/**/*.ts --fix",
    "mikro-orm-cli": "npx mikro-orm-esm"
  },
  "dependencies": {
    "@mikro-orm/cli": "^5.7.13",
    "@mikro-orm/core": "^5.7.13",
    "@mikro-orm/postgresql": "^5.7.13",
    "@mikro-orm/reflection": "^5.7.13",
    "@mikro-orm/seeder": "^5.7.13",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.1",
    "module-alias": "^2.2.3",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^18.1.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^20.8.10",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/parser": "^6.5.0",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "commitlint": "^17.6.7",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "lefthook": "^1.4.9",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0",
    "yarn": ">=1"
  },
  "_moduleAliases": {
    "~": ".",
    "~src": "./src"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./mikro-orm.config.ts",
      "./mikro-orm.config.js"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
